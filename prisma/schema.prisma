generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email    String   @unique
  password String
  role     UserRole @default(USER)
}

enum EventStatus {
  DRAFT
  SUGGESTED
  PUBLISHED
}

model Event {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  country     String
  dateEnd     String
  dateStart   String
  description String?
  linkMap     String?
  linkWebsite String?
  slug        String?
  status      EventStatus @default(PUBLISHED)
  title       String
}
